<div class="user-page-container">
<div class="row-fluid">
	<div class="span12">

<% provide(:title, 'All users') %>
<h1>Leaderboard</h1>

<table class="table">
  <thead>
    <tr>
      <th>#</th>      
      <th>Name</th>
      <th>Points</th>
      <th>Badges</th>
    </tr>
  </thead>
<tbody>
  <% @users.each_with_index do |user, index| %>
    <tr>
    	<td><%= index+1 %></td>
	    <td><%= link_to user.name, user %></td>
	    <td><%= user.points %></td>
	    <% if user.points < 50 %>
    	<td><%= image_tag("WW_badge_wizard.png", alt: "word wizard badge", class: "leaderboard-badge") %></td>
    	<% end %>
    </tr>
  <% end %>


</tbody>
</table>	

</div>
</div>
</div>

